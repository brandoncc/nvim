{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      // "args": ["-c", "/path/to/your/config.yaml"],
      "filetypes": ["vim", "eruby", "markdown", "yaml"]
    },
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    }
  },
  "javascript.validate.enable": false,
  "tsserver.log": "verbose",
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "cSpell.userWords": [
    "Airtable",
    "CSRF",
    "Rollbar",
    "bpry",
    "gundo",
    "jremmen",
    "junegunn",
    "neoclide",
    "semistandard",
    "tpope",
    "trusktr",
    "xargs"
  ],
  "codeLens.enable": true,
  "git.addGBlameToVirtualText": true,
  "solargraph.diagnostics": true,
  // don't change working directory when changing tree directory
  "explorer.file.tabCD": false,
  "explorer.quitOnOpen": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.openAction.strategy": "split",
  "explorer.icon.enableVimDevicons": true,
  "explorer.previewAction.onHover": false,
  "explorer.datetime.format": "MM/dd/yy HH:mm:ss",
  "explorer.file.column.git.showIgnored": true
}
